<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		   					 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean class="me.qyh.blog.service.impl.UIServiceImpl">
		<property name="processors">
			<list>
				<bean class="me.qyh.blog.ui.data.ArticleDataTagProcessor">
					<constructor-arg index="0" value="文章详情" />
					<constructor-arg index="1" value="article" />
				</bean>
				<bean class="me.qyh.blog.ui.data.ArticlesDataTagProcessor">
					<constructor-arg index="0" value="文章列表" />
					<constructor-arg index="1" value="articlePage" />
				</bean>
				<bean class="me.qyh.blog.ui.data.ArticleSpaceFilesDataTagProcessor">
					<constructor-arg index="0" value="文章空间归档" />
					<constructor-arg index="1" value="articleSpaceFiles" />
				</bean>
				<bean class="me.qyh.blog.ui.data.ArticleDateFilesDataTagProcessor">
					<constructor-arg index="0" value="文章日期归档" />
					<constructor-arg index="1" value="articleDateFiles" />
				</bean>
				<bean class="me.qyh.blog.ui.data.ArticleNavDataTagProcessor">
					<constructor-arg index="0" value="上一篇下一篇" />
					<constructor-arg index="1" value="articleNav" />
				</bean>
				<bean class="me.qyh.blog.ui.data.LastCommentsDataTagProcessor">
					<constructor-arg index="0" value="最近评论" />
					<constructor-arg index="1" value="comments" />
				</bean>
				<bean class="me.qyh.blog.ui.data.CommentsDataTagProcessor">
					<constructor-arg index="0" value="评论" />
					<constructor-arg index="1" value="commentPage" />
				</bean>
				<bean class="me.qyh.blog.ui.data.HotTagDataTagProcessor">
					<constructor-arg index="0" value="热门标签" />
					<constructor-arg index="1" value="hotTags" />
				</bean>
				<bean class="me.qyh.blog.ui.data.ArticleStatisticsDataTagProcessor">
					<constructor-arg index="0" value="文章统计" />
					<constructor-arg index="1" value="articleStatistics" />
				</bean>
			</list>
		</property>
		<property name="fragments">
			<bean class="me.qyh.blog.ui.fragment.FragmentsFactoryBean">
				<property name="tplMap">
					<map>
						<entry key="文章详情" value="classpath:me/qyh/blog/ui/fragment/article.html" />
						<entry key="文章列表"
							value="classpath:me/qyh/blog/ui/fragment/articles.html" />
						<entry key="文章空间归档"
							value="classpath:me/qyh/blog/ui/fragment/articleSpaceFiles.html" />
						<entry key="文章日期归档"
							value="classpath:me/qyh/blog/ui/fragment/articleDateFiles.html" />
						<entry key="上一篇下一篇"
							value="classpath:me/qyh/blog/ui/fragment/articleNav.html" />
						<entry key="最近评论"
							value="classpath:me/qyh/blog/ui/fragment/comments.html" />
						<entry key="热门标签" value="classpath:me/qyh/blog/ui/fragment/hotTags.html" />
						<entry key="文章统计"
							value="classpath:me/qyh/blog/ui/fragment/articleStatistics.html" />
						<entry key="顶部导航" value="classpath:me/qyh/blog/ui/fragment/nav.html" />
						<entry key="底部" value="classpath:me/qyh/blog/ui/fragment/foot.html" />
						<entry key="评论" value="classpath:me/qyh/blog/ui/fragment/_comments.html" />
					</map>
				</property>
			</bean>
		</property>
	</bean>
	<bean class="me.qyh.blog.ui.UIExposeHelper"/>
	<!-- 用来处理页面渲染错误 -->
	<bean class="me.qyh.blog.ui.DefaultTplRenderExceptionHandler" />

	<!-- 用来增加拓展页面 -->
	<bean class="me.qyh.blog.ui.page.ExpandedPageServer" />
</beans>      
