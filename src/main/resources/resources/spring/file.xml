<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:task="http://www.springframework.org/schema/task"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		   					 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		   					 http://www.springframework.org/schema/task
		   					 http://www.springframework.org/schema/task/spring-task-4.0.xsd ">
	<!-- 图片处理 -->
	<bean class="me.qyh.blog.file.GraphicsMagickImageHelper">
		<property name="magickPath" value="e:/GraphicsMagick-1.3.23-Q8" />
	</bean>
	<!-- 文件服务 -->
	<bean class="me.qyh.blog.file.DefaultFileManager">
		<property name="servers">
			<list>
				<bean class="me.qyh.blog.file.local.LocalFileServer">
					<property name="stores">
						<list>
							<bean class="me.qyh.blog.file.local.ImageResourceStore">
								<property name="absPath" value="/web/nginx/html/blog_file/image" />
								<property name="id" value="1" />
								<property name="urlPrefix" value="http://img.static.qyh.me" />
								<property name="thumbAbsPath" value="/web/nginx/html/blog_file/image/thumb" />
								<property name="handlerPrefix" value="image" />
								<property name="cacheSeconds" value="31556926" />
								<property name="sourceProtected" value="true" />
								<property name="defaultResize">
									<bean class="me.qyh.blog.file.Resize">
										<constructor-arg value="200" />
									</bean>
								</property>
								<property name="resizeValidator">
									<bean class="me.qyh.blog.file.DefaultResizeValidator">
										<property name="allowSizes">
											<array>
												<value>64</value>
												<value>100</value>
												<value>160</value>
												<value>200</value>
												<value>400</value>
												<value>600</value>
												<value>900</value>
											</array>
										</property>
									</bean>
								</property>
							</bean>
							<bean class="me.qyh.blog.file.local.CommonResourceStore">
								<property name="handlerPrefix" value="file" />
								<property name="absPath" value="/web/nginx/html/blog_file/file" />
								<property name="id" value="2" />
								<property name="urlPrefix" value="http://file.static.qyh.me" />
								<property name="cacheSeconds" value="31556926" />
							</bean>
						</list>
					</property>
					<property name="id" value="1" />
					<property name="name" value="本地存储"></property>
				</bean>
				<!-- <bean class="me.qyh.blog.file.DefaultFileServer"> <property name="stores"> 
					<list> <bean class="me.qyh.blog.file.oss.QiniuFileStore"> <property name="ak" 
					value="Kk5HmAfjwjttddvVWClI7Fhlm7GFm8lAUcQ_T9gt" /> <property name="sk" value="mBUsOm-uxuNVdlirZ_R3Gdv7RfDy0sUidJZ8dkz-" 
					/> <property name="urlPrefix" value="http://7xst8w.com1.z0.glb.clouddn.com/" 
					/> <property name="bucket" value="qyhqym" /> <property name="secret" value="false" 
					/> <property name="sourceProtected" value="true" /> <property name="style" 
					value="123123" /> <property name="backupAbsPath" value="C:/blog_file/backup/qiniu" 
					/> <property name="defaultResize"> <bean class="me.qyh.blog.file.Resize"> 
					<constructor-arg value="200" /> </bean> </property> </bean> </list> </property> 
					<property name="id" value="20" /> <property name="name" value="七牛云存储"></property> 
					</bean> -->
			</list>
		</property>
	</bean>

	<bean id="clearDeletedCommonFileJob" class="me.qyh.blog.service.impl.ClearDeletedCommonFileJob" />
	<task:scheduled-tasks scheduler="clearDeletedCommonFileSchedule">
		<task:scheduled ref="clearDeletedCommonFileJob" method="doJob"
			cron="0 0 3 * * ?" />
	</task:scheduled-tasks>
	<task:scheduler id="clearDeletedCommonFileSchedule"
		pool-size="1" />
</beans>      
